<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@drawable/mairah" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/mairahs_game"
                android:textAllCaps="true"
                android:textSize="@dimen/title_text_size" />

            <Button
                android:id="@+id/playA"
                android:layout_width="@dimen/play_button_width"
                android:layout_height="@dimen/play_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/interbutton_spacing"
                android:background="@color/button_bg"
                android:onClick="assign"
                android:text="@string/play_a"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/playB"
                android:layout_width="@dimen/play_button_width"
                android:layout_height="@dimen/play_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/interbutton_spacing"
                android:background="@color/button_bg"
                android:onClick="assign"
                android:text="@string/play_b"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/playC"
                android:layout_width="@dimen/play_button_width"
                android:layout_height="@dimen/play_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/interbutton_spacing"
                android:background="@color/button_bg"
                android:onClick="assign"
                android:text="@string/play_c"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/playD"
                android:layout_width="@dimen/play_button_width"
                android:layout_height="@dimen/play_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/interbutton_spacing"
                android:background="@color/button_bg"
                android:onClick="assign"
                android:text="@string/play_d"
                android:textAllCaps="true" />


            <Button
                android:id="@+id/playE"
                android:layout_width="@dimen/play_button_width"
                android:layout_height="@dimen/play_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/interbutton_spacing"
                android:background="@color/button_bg"
                android:onClick="assign"
                android:text="@string/play_e"
                android:textAllCaps="true" />


            <Button
                android:id="@+id/playK"
                android:layout_width="@dimen/play_button_width"
                android:layout_height="@dimen/play_button_height"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="@dimen/interbutton_spacing"
                android:background="@color/button_bg"
                android:onClick="assign"
                android:text="@string/play_k"
                android:textAllCaps="true" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/mairahs_name_query"
                android:inputType="textCapWords"
                android:textSize="@dimen/query_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/which_statements_are_true"
                android:textAllCaps="true"
                android:textSize="@dimen/query_text_size" />

            <CheckBox
                android:id="@+id/i_am_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:paddingLeft="24dp"
                android:text="@string/i_am_two"
                android:textSize="@dimen/query_text_size" />

            <CheckBox
                android:id="@+id/i_am_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:paddingLeft="24dp"
                android:text="@string/i_am_a_female"
                android:textSize="@dimen/query_text_size" />

            <CheckBox
                android:id="@+id/i_live_in_delhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingLeft="24dp"
                android:text="@string/i_live_in_delhi"
                android:textSize="@dimen/query_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/how_cute"
                android:textAllCaps="true"
                android:textSize="@dimen/query_text_size" />

            <RadioGroup
                android:id="@+id/radioCuteness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioCute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/i_am_cute" />

                <RadioButton
                    android:id="@+id/radioTotallyCute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_am_totally_cute" />

                <RadioButton
                    android:id="@+id/radioWayTooCute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_am_way_too_cute" />

            </RadioGroup>

            <Button
                android:id="@+id/score"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/score_button_bg"
                android:onClick="score"
                android:text="@string/score"
                android:textAllCaps="true" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>